@model PGD.Application.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="left" style="background-color: red;"></div>

<div class="right" style="background-color:red;">
    <h1 style="background-color:white; width:500px;">&nbsp&nbsp&nbsp--Ambiente de Desenvolvimento--</h1>
    <div class="col-md-8 col-sm-8 col-lg-8 col-xs-8" style="display: flex; justify-content: center; height: 110px; width: 500px">
        <img class="login-img" src="~/Imagens/fundo.dnit_v4.png" />
    </div>

    <div class=" col-md-8 col-sm-8 col-lg-8 col-xs-8" id="loginMain">

        @*<h2 class="col-md-12 text-center">DNIT</h2>*@
        @*<h2 class="col-md-12 text-center">@ViewBag.Title</h2>*@

        @using (Html.BeginForm("Index", "Login", FormMethod.Post, htmlAttributes: new { @class = "form col-md-12" }))
        {
            @Html.AntiForgeryToken()

            <div class="row col-md-12 col-lg-12">
                <div class="form-group col-md-12">

                    @*@Html.Label("Sigla", "Usuário", new { @class = "col-md-12 control-label" })*@
                    <div class="col-md-12 input-group-lg">


                        @Html.TextBoxFor(x => x.Sigla, new { @class = "form-control input-login ", @type = "text", @placeHolder = "Usuário" })
                        @Html.ValidationMessageFor(c => c.Sigla)

                    </div>
                </div>
            </div>

            <div class="row col-md-12">
                <div class="form-group col-md-12">
                    @*@Html.Label("Senha", "Senha", new { @class = "col-md-12 control-label" })*@
                    <div class="col-md-12 input-group-lg">
                        @Html.TextBoxFor(x => x.Senha, new { @class = "form-control input-login ", @type = "password", @placeHolder = "Senha" })
                        @Html.ValidationMessageFor(c => c.Senha)
                    </div>
                </div>
            </div>

            <div class="row col-md-12 col-sm-12 col-lg-6 col-xs-12">
                <div class="col text-center">
                    <button class="btn btn-entrar">Entrar</button>
                </div>
            </div>}
    </div>
    <div class="col-md-8 col-sm-8 col-lg-8 col-xs-8 clique-aqui text-center">

        <a href="https://www.gov.br/dnit/pt-br/acesso-a-informacao/servidores/programa-de-gestao-de-demandas" class="btn btn-link active" role="button" aria-pressed="true" target="_blank">  Clique aqui</a> e saiba como participar do PGD.

        <br />
        <br>Para acesso ao sistema PGD, o usuário concorda com os termos <a href="https://www.gov.br/dnit/pt-br/acesso-a-informacao/servidores/programa-de-gestao-de-desempenho/sistema/TermodeUsoePolticadePrivacidadedoPGDV12FINAL.pdf" class="btn btn-link active" role="button" aria-pressed="true" target="_blank">  aqui </a>  dispostos.</br>
    </div>


    <div class="footer-container col-md-12 col-sm-12 col-lg-6 col-xs-6">
        <img class="imagem_footer" src="~/Imagens/fundo.dnit_v5.png" />
    </div>
</div>







@section Scripts{


    <script>
        $(document).ready(function () {
            //    $("#Cpf").mask("999.999.999-99");
        });
      

        var purecookieTitle = "Ambiente de TESTE";
        var purecookieDesc = "<h1> Usuário este site e um ambiente de desenvolvimento e teste, clique no link abaixo para ir ao site correto.</h1> ";
        var purecookieLink = '<a href="https://servicos.dnit.gov.br/pgd/Login" target="_blank">SISTEMA PGD</a>';
        var purecookieButton = "OK";
        function pureFadeIn(e, o) {
            var i = document.getElementById(e);
            i.style.opacity = 0, i.style.display = o || "block", function e() { var o = parseFloat(i.style.opacity); (o += .02) > 1 || (i.style.opacity = o, requestAnimationFrame(e)) }()
        }

        function pureFadeOut(e) {
            var o = document.getElementById(e);
            o.style.opacity = 1, function e() { (o.style.opacity -= .02) < 0 ? o.style.display = "none" : requestAnimationFrame(e) }()
        }

        function setCookie(e, o, i) {
            var t = "";
            if (i) {
	
                var n = new Date; n.setTime(n.getTime() + 24 * i * 60 * 60 * 1e3), t = "; expires = "+n.toUTCString()
            }

            document.cookie = e + "=" + (o || "") + t + ";path = /"
        }

        function getCookie(e) {
            for (var o = e + "=", i = document.cookie.split(";"), t = 0; t < i.length; t++) { for (var n = i[t]; " " == n.charAt(0);)n = n.substring(1, n.length); if (0 == n.indexOf(o)) return n.substring(o.length, n.length) }
            return null
        }
        function eraseCookie(e) { document.cookie = e + "=; Max-Age=-99999999;" }

        function cookieConsent() {
            getCookie("aceite") || (document.body.innerHTML += '<div class="cookieConsentContainer" id="cookieConsentContainer"><div class="cookieTitle"><a>' + purecookieTitle + '</a></div><div class="cookieDesc"><p>' + purecookieDesc + " " + purecookieLink + '</p></div><div class="cookieButton"><a onClick="purecookieDismiss();">' + purecookieButton + "</a></div></div>", pureFadeIn("cookieConsentContainer"))

        }

        function purecookieDismiss() { setCookie("aceite", "1", 90), pureFadeOut("cookieConsentContainer") } window.onload = function () { cookieConsent() };
    </script>
}