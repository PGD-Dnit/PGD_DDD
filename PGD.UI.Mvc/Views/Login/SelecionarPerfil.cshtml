@{
    ViewBag.Title = "Selecionar perfil";
}



<div class="col-md-4 col-md-offset-4 col-xs-5 selecione_perfil_main">

    <div class="col-12" style="margin-bottom:3rem">
        <img  width="200"   src="~/Imagens/fundo.dnit_v6.png" /> 
    </div>

    @using (Html.BeginForm("SelecionarPerfil", "Login", FormMethod.Post, htmlAttributes: new { @class = "form col-md-12 selecione_perfil_container" }))
    {
        @Html.AntiForgeryToken()
        <div class="panel perfil_body">
            <div class="panel-body opcoes-item">
                <div class="row opcoes_perfil">
                    @foreach (var item in (List<PGD.Domain.Enums.Perfil>)TempData["lstPerfil"])
                    {
                        <div class="op">
                            @Html.RadioButton("Perfil", item, false, new { @id = "perfil" + item.ToString() })
                            @if (item.ToString() == "Solicitante")
                            {
                                @Html.Label("Participante")
                            }
                            else if (item.ToString() == "Dirigente")
                            {
                                @Html.Label("Chefia")
                            }
                            else
                            {
                                @Html.Label(item.ToString(), new { @for = "perfil" + item.ToString() })
                            }

                        </div>
                    }
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col text-center">
                <button class="btn btn-lg btn-entrar" style="transform:scale(0.65); width:350px;">Continuar</button>
            </div>
        </div>

    }

    <div class="clearfix"></div>
</div>
<div>
    <img class="imagem_footer" src="~/Imagens/fundo.dnit_v5.png" />
</div>
